{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "routes": "remix routes",
    "format": "run-s format:*",
    "format:lint": "eslint --fix --ext .js,.jsx,.ts,.tsx .",
    "format:db": "npx prisma format",
    "clean": "rimraf ./node_modules .cache ./build ./public/build && npm i",
    "build": "run-s \"build:*\"",
    "build:css": "npm run generate:css -- --minify",
    "build:remix": "remix build",
    "build:db": "npx prisma generate",
    "update:db": "npx prisma db push",
    "update:remix": "npm i @remix-run/express@latest @remix-run/node@latest @remix-run/react@latest @remix-run/dev@latest @remix-run/eslint-config@latest",
    "seed": "npx ts-node prisma/seed.ts",
    "reset:db": "rimraf ./prisma/dev.db && npm run update:db && npm run seed",
    "dev": "run-p \"dev:*\"",
    "dev:css": "npm run generate:css -- --watch",
    "dev:node": "cross-env NODE_ENV=development nodemon ./server.js --watch ./server.js",
    "dev:remix": "remix watch",
    "generate:css": "npx tailwindcss -o ./app/styles/tailwind.css",
    "start": "cross-env NODE_ENV=production node ./server.js"
  },
  "dependencies": {
    "@prisma/client": "^4.7.0",
    "@remix-run/express": "^1.19.3",
    "@remix-run/node": "^1.19.3",
    "@remix-run/react": "^1.19.3",
    "bcryptjs": "^2.4.3",
    "clsx": "^1.2.1",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "express": "^4.18.2",
    "morgan": "^1.10.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.19.3",
    "@remix-run/eslint-config": "^1.19.3",
    "@types/bcryptjs": "^2.4.2",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-html": "^7.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.8",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "nodemon": "^2.0.19",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "prisma": "^4.7.0",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": ">=14"
  }
}
